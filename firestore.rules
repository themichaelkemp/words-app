rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for security checks
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isValidSong() {
      let incoming = request.resource.data;
      return incoming.keys().hasAll(['title', 'lyrics', 'userId', 'createdAt']) &&
             incoming.title is string &&
             incoming.title.size() > 0 &&
             incoming.title.size() <= 200 &&
             incoming.lyrics is string &&
             incoming.lyrics.size() <= 50000 && // Max ~50KB of lyrics
             incoming.userId is string &&
             incoming.createdAt is timestamp;
    }

    function isValidSongUpdate() {
      let incoming = request.resource.data;
      // Prevent changing userId or createdAt on updates
      return incoming.userId == resource.data.userId &&
             incoming.createdAt == resource.data.createdAt;
    }

    // Songs collection - user must be authenticated and can only access their own songs
    match /songs/{songId} {
      // Read: Users can only read their own songs
      allow read: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;

      // Create: Users can create songs with their own userId
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid &&
                       isValidSong();

      // Update: Users can only update their own songs
      allow update: if isOwner(resource.data.userId) &&
                       isValidSong() &&
                       isValidSongUpdate();

      // Delete: Users can only delete their own songs
      allow delete: if isOwner(resource.data.userId);
    }

    // User profiles collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);

      // Users can create/update their own profile
      allow create, update: if isOwner(userId) &&
                              request.resource.data.keys().hasAll(['email', 'displayName', 'createdAt']) &&
                              request.resource.data.email is string &&
                              request.resource.data.displayName is string &&
                              request.resource.data.displayName.size() <= 100;

      // Users can delete their own profile
      allow delete: if isOwner(userId);
    }

    // Shared songs collection (for collaboration features - future use)
    match /sharedSongs/{shareId} {
      // Read if user is owner or in the sharedWith array
      allow read: if isAuthenticated() && (
        resource.data.ownerId == request.auth.uid ||
        request.auth.uid in resource.data.sharedWith
      );

      // Only owner can create/update/delete shares
      allow create, update, delete: if isAuthenticated() &&
                                       request.resource.data.ownerId == request.auth.uid;
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
